generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url = env("DATABASE_URL")
}

// backend usado para criação de usuario no site 
model User {
    id String @id @default (auto()) @map ("_id") @db.ObjectId
    name String?
    email String @unique
    image String?
    bookedVisits Json []
    favResidenciesId String [] @db.ObjectId 
    ownedResidencies Residency[] @relation("Owner")
    
} 

// função para add novos imoveis diretamente do site com login de adm. Coneção do mongo bd (backend) com a interface.

model Residency {
    id String  @id @default (auto()) @map("_id") @db.ObjectId
    title String
    description String
    price Int
    address String
    city String
    country String
    image String
    facilities Json
    userEmail String 
    owner User @relation("Owner", fields:[userEmail], references:[email]) //usuario do proprietario
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    //add de teste
    code        String
    bedrooms    Int?
    bathrooms   Int?
    garage      Int?
    area        Int?
    financing   String
    downPayment Int?
    iptu        Int?
    carrossel Json?


    @@unique(fields:[address, userEmail])
}
